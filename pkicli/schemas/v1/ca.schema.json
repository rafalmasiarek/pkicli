{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/pkicli/v1/ca.schema.json",
    "title": "pkicli v1 - CA document",
    "type": "object",
    "required": [
        "version",
        "updated_at",
        "metadata",
        "rotation",
        "ca",
        "secrets_manager"
    ],
    "properties": {
        "version": {
            "const": "v1"
        },
        "updated_at": {
            "type": "string"
        },
        "metadata": {
            "type": "object",
            "required": [
                "not_before",
                "not_after",
                "serial",
                "sha256",
                "sig_alg",
                "pubkey_algo",
                "pubkey_bits",
                "skid",
                "akid"
            ],
            "properties": {
                "not_before": {
                    "type": "string"
                },
                "not_after": {
                    "type": "string"
                },
                "serial": {
                    "type": "string"
                },
                "sha256": {
                    "type": "string"
                },
                "sig_alg": {
                    "type": "string"
                },
                "pubkey_algo": {
                    "type": "string"
                },
                "pubkey_bits": {
                    "type": "integer"
                },
                "skid": {
                    "type": "string"
                },
                "akid": {
                    "type": "string"
                },
                "issuer_cn": {
                    "type": "string"
                },
                "subject_cn": {
                    "type": "string"
                },
                "san": {
                    "type": [
                        "array",
                        "null"
                    ],
                    "items": {
                        "type": "string"
                    }
                }
            },
            "additionalProperties": true
        },
        "rotation": {
            "type": "object",
            "required": [
                "status",
                "last_update"
            ],
            "properties": {
                "status": {
                    "type": "string"
                },
                "last_update": {
                    "type": "string"
                },
                "reason": {
                    "type": "string"
                },
                "actor": {
                    "type": "string"
                }
            },
            "additionalProperties": true
        },
        "ca": {
            "type": "object",
            "required": [
                "name",
                "version",
                "history"
            ],
            "properties": {
                "name": {
                    "type": "string"
                },
                "version": {
                    "type": "integer"
                },
                "history": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "required": [
                            "version",
                            "activated_at",
                            "deactivated_at",
                            "serial",
                            "sha256",
                            "not_before",
                            "not_after",
                            "state_s3"
                        ],
                        "properties": {
                            "version": {
                                "type": "integer"
                            },
                            "activated_at": {
                                "type": "string"
                            },
                            "deactivated_at": {
                                "type": "string"
                            },
                            "reason": {
                                "type": "string"
                            },
                            "serial": {
                                "type": "string"
                            },
                            "sha256": {
                                "type": "string"
                            },
                            "not_before": {
                                "type": "string"
                            },
                            "not_after": {
                                "type": "string"
                            },
                            "state_s3": {
                                "type": "string"
                            }
                        },
                        "additionalProperties": true
                    }
                }
            },
            "additionalProperties": true
        },
        "secrets_manager": {
            "type": "object",
            "required": [
                "crt_arn"
            ],
            "properties": {
                "crt_arn": {
                    "type": "string"
                },
                "key_arn": {
                    "type": [
                        "string",
                        "null"
                    ]
                }
            },
            "additionalProperties": true
        },
        "secrets_manager_meta": {
            "type": "object",
            "additionalProperties": true
        },
        "tags": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "description": {
            "type": "string"
        },
        "s3_meta": {
            "type": "object",
            "properties": {
                "version_id": {
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "etag": {
                    "type": [
                        "string",
                        "null"
                    ]
                }
            },
            "additionalProperties": true
        }
    },
    "additionalProperties": true
}