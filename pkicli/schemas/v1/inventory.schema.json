{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/pkicli/v1/inventory.schema.json",
    "title": "pkicli v1 - Inventory document",
    "type": "object",
    "required": [
        "version",
        "cas",
        "certs",
        "updated_at"
    ],
    "properties": {
        "version": {
            "const": "v1"
        },
        "cas": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "name",
                    "version",
                    "state_s3"
                ],
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "version": {
                        "type": "integer"
                    },
                    "crt_arn": {
                        "type": [
                            "string",
                            "null"
                        ]
                    },
                    "key_arn": {
                        "type": [
                            "string",
                            "null"
                        ]
                    },
                    "state_s3": {
                        "type": "string"
                    }
                },
                "additionalProperties": true
            }
        },
        "certs": {
            "type": "array",
            "items": {
                "type": "object",
                "additionalProperties": true
            }
        },
        "updated_at": {
            "type": "string"
        },
        "s3_meta": {
            "type": "object",
            "properties": {
                "version_id": {
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "etag": {
                    "type": [
                        "string",
                        "null"
                    ]
                }
            },
            "additionalProperties": true
        }
    },
    "additionalProperties": true
}